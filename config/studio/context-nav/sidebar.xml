<contextNav>
  <contexts>
    <context>
      <groups>
        <group>
          <menuItems>
            <menuItem>
              <modulehooks>

                <!-- Dashboard -->
                <modulehook>
                  <name>dashboard</name>
                  <params>
                    <label>Dashboard</label>
                    <path>/site-dashboard</path>
                    <test>Testing</test>
                  </params>
                </modulehook>

                <!-- Site Config -->
                <modulehook>
                  <name>site-config</name>
                  <params>
                    <roles>
                      <role>admin</role>
                      <role>developer</role>
                    </roles>
                    <label>Site Config</label>
                    <path>/site-config</path>
                  </params>
                </modulehook>

                <!-- Path Navigator: Pages -->
                <modulehook>
                  <render>PagesWidget</render>
                  <props>
                    <title>Pages</title>
                    <icon>fa fa-file-text-o</icon>
                    <path>/site/website</path>
                    <locale>en</locale>
                  </props>
                  <container>
                    <style>
                      <padding-left>9px</padding-left>
                    </style>
                    <class>next-pages-widget</class>
                  </container>
                </modulehook>

