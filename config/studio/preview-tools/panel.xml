<panel>
  <modules>
    <module>
      <moduleName>ice-tools-panel</moduleName>
      <title>inContextEditing</title>
    </module>
    <module>
      <moduleName>component-panel</moduleName>
      <title>pageComponents</title>
    </module>
    <module>
      <moduleName>craftercms.ice.assets</moduleName>
      <title>assetsPanel</title>
    </module>
    <module>
      <moduleName>craftercms.ice.audiences</moduleName>
      <title>audiencesPanel</title>
    </module>
    <!--
    <module>
      <moduleName>craftercms.ice.audiencess</moduleName>
